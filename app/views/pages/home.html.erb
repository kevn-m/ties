<div class="banner">
  <div class="container">
    <div class='container mx-4'>
      <div class="row justify-content-center">
        <div class="col-6 p-4" style="background-color: rgba(255,255,255,0.6); box-shadow: 0 0 4px grey; border-radius: 5px;">
          <h2>Log in</h2>
            <%= simple_form_for(@resource, url: session_path(@resource)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean  %>
              </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in" , class: "btn-primary"%>
            </div>
          <% end %>

          <%#= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
