      <div class="profile-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path referral.photos.first.key %>')">
      </div>
    <% end %>
      <div class="slide-controls">
        <%= link_to "Yes", accept_path(referral.id), :method=> :patch, class: "btn btn-primary" %>
        <%= link_to "No", reject_path(referral.id), :method=> :patch, class: "btn btn-primary" %>
      </div>
  <% end %>
</div>

