<h1>Your recommended ties</h1>

<div class="card d-flex">
  <ul id="slides">
    <% @referrals.each_with_index do |referral, index| %>
      <%= link_to user_path(referral.id) do %>
        <div class="profile-card slide <%= 'showing' if index == 0   %> " data-id="<%= referral.id %>" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path referral.photos.first.key %>')">
        </div>
      <% end %>
    <% end %>
  </ul>
</div>
<div class="slide-controls">
  <button class="controls" id="reject">No</button>
  <button class="controls" id="accept">Yes</button>
</div>



