<h2 style="position:fixed; color: rgba(255, 255, 255, 0.8); left: 4px; top: 0;
          text-shadow: 0px 0px 4px rgba(0, 0, 0, 0.4); z-index: 100">
  <%= @user.username %>
</h2>

<div id="carouselindicators" class="carousel slide" data-ride="carousel" data-interval="3000">

  <ol class="carousel-indicators">
    <% @user.photos.count.times.each do |i| %>
      <li data-target="#carouselindicators" data-slide-to="<%= i %>" class="<%= 'active' if i.zero? %>"></li>
    <% end %>
  </ol>

  <div class="carousel-inner">
    <% @user.photos.each_with_index do |pic, i| %>
      <div class="carousel-item <%= 'active' if i.zero? %>">
        <img src="<%= cl_image_path pic.key %>" class="carousel-img" alt="Profile image <%= i %>">
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselindicators" role="button" data-slide="prev" data-abc="true">
    <i class="fa fa-chevron-left"></i>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselindicators" role="button" data-slide="next" data-abc="true">
    <i class="fa fa-chevron-right"></i>
    <span class="sr-only">Next</span>
  </a>

</div>

<div class="profile-view">
  <h2 class="name">
    <%= "#{@user.first_name} #{@user.last_name}" %>
  </h2>
  <h6 class="bio">
    <%= "#{@user.bio}" %>
  </h6>

  <h6 class="summary">
    <%= "#{@user.summary}" %>
  </h6>
  <div class="tie-status"><i class="fas fa-lightbulb"></i> <%= @user.status %></div>
</div>
